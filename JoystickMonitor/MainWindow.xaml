<Window x:Class="JoystickMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JoystickMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   <DockPanel>
      <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
         <Button x:Name="shutdownButton" Width="100" Height="50">Shutdown</Button>
         <Button x:Name="getImageButton" Width="100" Height="50">Get Image</Button>
      </StackPanel>
      <Image x:Name="image"/>
   </DockPanel>
</Window>
